/**
 * @param {number[]} nums
 * @param {number} target
 * @return {number[]}
 */
var twoSum = function(nums, target) {
    const hashMap = new Map(); // Stores seen numbers: {number: index}

    for (let i = 0; i < nums.length; i++) {
        const complement = target - nums[i];
        if (hashMap.has(complement)) {
            // If the complement has been seen before, return its index and the current index
            return [hashMap.get(complement), i];
        }
        // Otherwise, store the current number and its index in the map
        hashMap.set(nums[i], i);
    }
    
    // As per the problem statement, a solution is guaranteed to exist.
    // If no solution is found (though it shouldn't happen based on problem constraints), you could return an empty array or throw an error.
};
